// This file is on test and all is fine and we continue, more and more
pipeline {
    agent {
        docker {
            image 'python:3.9.1'
            args '--user root'
        }
    }
    stages {
        stage ('Build') {
            steps {
                sh '''
                    rm -rf venv/
                    mkdir venv
                    pip install virtualenv
                    virtualenv venv -p python3.9.1
                    . venv/bin/activate
                    pip install -r requirements.txt
                    py.test --api-url $bragi --junitxml=results.xml --tb short -s geocoder_tester/world/france/
                '''
            }
        }
    }
    post {
        failure { echo 'Job failed !' }
        success { echo 'Job is successful !' }
        always {
            cleanWs()
        }
    }
}
