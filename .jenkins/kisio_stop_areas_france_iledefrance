pipeline {
    agent {
        docker {
            image 'python:3.9.1'
            args '--user root'
        }
    }
    stages {
        stage ('Geocoder Tester') {
            steps {
                withCredentials([string(credentialsId: 'bragi-url-dev', variable: 'URL_BRAGI_DEV')]) {
                    sh '''
                        rm -rf venv/
                        mkdir venv
                        pip install virtualenv
                        virtualenv venv -p python3
                        . venv/bin/activate
                        pip install -r requirements.txt
                        py.test --api-url $URL_BRAGI_DEV?pt_dataset[]=fr-idf --tb short -s geocoder_tester/kisio/stop_areas/france/iledefrance/ --junitxml=results.xml
                    '''
                }
            }
        }
    }
    post {
        always {
            junit(testResults: "results.xml", allowEmptyResults: true)
            archiveArtifacts artifacts: 'results.xml', fingerprint: true
            cleanWs()
        }
    }
}
